{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
<br>
<div class="container">
    <h1 id='titre'>Contact</h1>

    <div class="row" id="text">
        <div class="col-4" id="colonne-1"></div>
        <div class="col-4" id="colonne-1">
            {{form_start(formcontact)}}

            {{form_row(formcontact.fullName, {'attr' : {'placeholder' : "Full name"}})}}
            {{form_row(formcontact.email, {'attr' : {'placeholder' : "Email"}})}}
            {{form_row(formcontact.subject, {'attr' : {'placeholder' : "Sujet"}})}}
            {{form_row(formcontact.message, {'attr' : {'placeholder' : "Message"}})}}
            <button  type="submit" class="btn" id='btn'>
                    Soumettre ma demande
            </button>

            {{form_end(formcontact)}}

            <div id="map">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2624.157935085047!2d2.3026113770047054!3d48.87426569958846!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e66fc11620cbd1%3A0x93fa9ccb48f85dab!2s42%20Rue%20Washington%2C%2075008%20Paris!5e0!3m2!1sfr!2sfr!4v1687250230409!5m2!1sfr!2sfr" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
        </div>    
    </div>
    
</div>
{% endblock %}
