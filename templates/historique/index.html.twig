{% extends 'base.html.twig' %}

{% block title %}Historique{% endblock %}

{% block body %}
    <br>
    <h1 id='titre'>Historique</h1>
    <br><br>
    <div id="Body">
        <div class="container">
        <div class="row">
            <div id="text-historique">
                {% for showHistorique in showHistoriques %}
                        

                    {% if loop.index is odd %}
                        <div id='test'class="col-md-2">
                            {% if images1 %}
                                    <img src="{{asset('assets/Images/' ~ images1.name) }}" class="img-fluid">
                            {% endif %}
                        </div>
                        <div class="col-md-10">
                            {% for historique in showHistorique %}
                                <p>{{ historique.text }}</p>                 
                            {% endfor %}    
                        </div>
                    {% else %}
                        <div class="col-md-10">
                            {% for historique in showHistorique %}
                                <p>{{ historique.text }}</p>                 
                            {% endfor %}
                        </div>
                            {% if images1 %}
                                    <img src="{{asset('assets/Images/' ~ images1.name) }}" id="test2" class="img-fluid" >
                            {% endif %}
                    {% endif %}

                    
                    <br>
                {% endfor %}
            </div>
            </div>
        </div>
    </div>
{% endblock %}
