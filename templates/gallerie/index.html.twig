{% extends 'base.html.twig' %}

{% block title %}Gallerie{% endblock %}

{% block body %}
    <br>
    <div id="Body">
        <div class="container">
            <h1 id="titre">Galerie de nos produits</h1><br>
            <div class="row">
                    {% for image in showImages %}
                        <div class="col-md-4">
                            <img src="{{asset('assets/Images/' ~ image.name) }}" class="img-fluid" id="gallerie"> 
                        </div> 
                    {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
